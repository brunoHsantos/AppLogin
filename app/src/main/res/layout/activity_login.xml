<?xml version="1.0" encoding="utf-8"?>
<layout >
    <data>

        <variable
            name="email"
            type="String" />
        
        
        <variable
            name="password"
            type="String" />

        <variable
            name="error"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingClass"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" >


        <ImageView
            android:id="@+id/Icon_Profile"
            android:layout_width="158dp"
            android:layout_height="165dp"
            android:layout_marginBottom="250dp"
            android:src="@mipmap/ic_icon_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{email}"
            app:requiredField="@{error}"
            android:hint="Email"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@id/Icon_Profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassowrdLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{password}"
            app:requiredField="@{error}"
            android:hint="Senha"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@id/etEmailLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <Button
            android:id="@+id/textRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/tranparent"
            android:hint="NÃ£o possui login? Registre-se."
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etPassowrdLogin" />


        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Entrar"
            android:backgroundTint="@color/teal_200"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/textRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
